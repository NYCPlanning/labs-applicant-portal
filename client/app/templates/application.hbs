{{#if this.header}}
<p class="labs-beta-notice hide-for-print">Beware of phishing scams: DCP will never request land use application fees via email, only through the applicant portal. Official emails always end in @planning.nyc.gov.</p>
  <LabsUi::SiteHeader
    @responsiveNav={{true}}
    @responsiveSize="medium"
    @betaNotice={{false}}
    as |banner|
  >
    <banner.title>
      <LinkTo @route="application" class="site-title">
        Applicants
        <small class="site-subtitle show-for-medium">File and track your applications</small>
      </LinkTo>
    </banner.title>
    <banner.nav>
      <ul class="menu vertical medium-horizontal">
        {{#if this.session.isAuthenticated}}
          <Auth::UserBadge />
        {{/if}}
      </ul>
    </banner.nav>
  </LabsUi::SiteHeader>
{{/if}}

<div class="site-main xlarge-padding-bottom">
  <div class="grid-container large-padding-top xlarge-padding-bottom">
    {{outlet}}
  </div>
</div>

<div id="reveal-modal-container"></div>
