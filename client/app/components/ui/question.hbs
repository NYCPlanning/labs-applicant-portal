<fieldset class="ui-question" ...attributes>
  {{yield (hash
    questionId=this.questionId
    Legend=(component 'ui/legend' required=@required)
    Label=(component 'ui/label' required=@required for=this.questionId)
    AdditionalGuidance=(component 'ui/collapsible-text' buttonText="Additional Guidance")
  )}}
</fieldset>
