{{#each-in (group-by 'statuscode' @milestones) as |status groupedMilestones|}}
  <h3>{{status}}</h3>
  <ul class="no-bullet">
    {{#each groupedMilestones as |milestone|}}
      <li>
        <Project::Milestones::Milestone
          @milestone={{milestone}}
        />
      </li>
    {{/each}}
  </ul>
{{/each-in}}

{{yield}}
