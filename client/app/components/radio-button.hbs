{{!-- We override this so that we can spread attributes onto the label element which lets us use data-test selectors --}}
{{!-- Disabling lint because we do not own this source code --}}
{{!-- template-lint-disable  --}}

{{#if hasBlock}}
  <label
    class="ember-radio-button {{if checked checkedClass}} {{joinedClassNames}}"
    for={{radioId}}
    ...attributes
  >
    {{radio-button-input
        class=radioClass
        id=radioId
        autofocus=autofocus
        disabled=disabled
        name=name
        required=required
        tabindex=tabindex
        groupValue=groupValue
        value=value
        ariaLabelledby=ariaLabelledby
        ariaDescribedby=ariaDescribedby
        changed=(action "changed")}}

    {{yield}}
  </label>
{{else}}
  {{radio-button-input
      class=radioClass
      id=radioId
      autofocus=autofocus
      disabled=disabled
      name=name
      required=required
      tabindex=tabindex
      groupValue=groupValue
      value=value
      ariaLabelledby=ariaLabelledby
      ariaDescribedby=ariaDescribedby
      changed=(action "changed")}}
{{/if}}
