          type="radio"
          name="dcp_landuseactiontype2"
          value='717170000'
          id="dcp_landuseactiontype2_yes"
        }}<label for="dcp_landuseactiontype2_yes">Yes</label>
        {{input
          type="radio"
          name="dcp_landuseactiontype2"
          value='717170001'
          id="dcp_landuseactiontype2_no"
        }}<label for="dcp_landuseactiontype2_no">No</label>
