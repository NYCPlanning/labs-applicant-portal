{{#let @landuseActionForm as |landuseActionForm|}}
  <div>
    <h5 class="small-margin-bottom">
      What Zoning Resolution section is this Action pursuant to?
    </h5>

    <label data-test-zoning-resolution-picker>
      <PowerSelect
        triggerClass="zoning-resolution-dropdown"
        supportsDataTestProperties={{true}}
        @placeholder={{this.searchPlaceholder}}
        @searchEnabled={{true}}
        @options={{this.zoningResolutionNames}}
        @selected={{this.chosenZoningResolutionName}}
        @onChange={{fn (mut this.chosenZoningResolutionName)}}
        @onClose={{fn (mut landuseActionForm.data.chosenZoningResolutionId) this.chosenZoningResolutionId}}
        as |zoningResolutionName|
      >
        {{zoningResolutionName}}
      </PowerSelect>
    </label>
  </div>
{{/let}}