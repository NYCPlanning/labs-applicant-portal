<fieldset class="fieldset relative" data-test-applicant-fieldset>
  <legend data-test-applicant-title="{{@applicant.role}}">
    <strong>
      {{@applicant.role}}
    </strong>
  </legend>

  {{!-- if sent to CRM "Applicant Information" table, need to know "type" --}}
  {{#if (eq @applicant.role "Applicant")}}
    <div class="cell medium-6">
      <Input 
        type="radio" 
        name="applicant-type" 
        @value="Individual"
        onClick={{fn this.updateAttr @applicant "applicantType" "Individual"}}
        checked={{eq @applicant.applicantType "Individual"}}
      />
      <label>Individual</label>
      <Input 
        type="radio" 
        name="applicant-type" 
        @value="Organization"
        onClick={{fn this.updateAttr @applicant "applicantType" "Organization"}}
        checked={{eq @applicant.applicantType "Organization"}}
      />
      <label>Organization</label>
    </div>
  {{/if}}

  {{!-- and if the applicant is on behalf of an organization, we need to know which organization --}}
  {{#if (eq @applicant.applicantType "Organization")}}
    <label>Organization <Input type="text" @value={{@applicant.organization}}/></label>
    <hr/>
  {{/if}}

  <div class="grid-x grid-margin-x">
    <div class="cell medium-6">
      <label>First Name</label>
      <Input type="text" @value={{@applicant.firstName}}/>
    </div>
    <div class="cell medium-6">
      <label>Last Name <Input type="text" @value={{@applicant.lastName}}/></label>
    </div>
  </div>
  
  {{!-- always allow input for Applicant Team Members --}}
  {{#if (eq @applicant.role "Applicant Team Member")}}
    <label>Organization <Input type="text" @value={{@applicant.organization}}/></label>
  {{/if}}

  <label>Email Address <Input type="email" @value={{@applicant.emailAddress}}/></label>
  <label>Address <Input type="text" @value={{@applicant.address}}/></label>

  <div class="grid-x grid-margin-x">
    <div class="cell medium-auto">
      <label>City <Input type="text" @value={{@applicant.city}}/></label>
    </div>
    <div class="cell auto medium-2">
      <label>State <Input type="text" @value={{@applicant.state}}/></label>
    </div>
    <div class="cell auto medium-4">
      <label>ZIP <Input type="text" @value={{@applicant.zip}}/></label>
    </div>
  </div>
  
  <label>Phone <Input type="text" @value={{@applicant.phone}}/></label>

  <p class="text-right no-margin text-small">
    <button onClick={{fn @removeApplicant @applicant}} class="trash-button text-red-dark">
      Remove Applicant
    </button>
  </p>

</fieldset>