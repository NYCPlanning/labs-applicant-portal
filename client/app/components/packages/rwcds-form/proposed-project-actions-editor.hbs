{{#let @zrForm as |zrForm|}}
  <Ui::Question @fieldset={{true}} class="fieldset" as |Q|>
    <Q.Prompt>
      <span class="label">
        {{~zrForm.saveableChanges.dcpZoningresolutiontype~}}
        {{#if (lookup-action-type zrForm.saveableChanges.dcpZoningresolutiontype)}}
          <LabsUi::IconTooltip
            @tip={{lookup-action-type zrForm.saveableChanges.dcpZoningresolutiontype}}
            @icon="info-circle"
            @side="bottom"
            @transform="shrink-4 up-2"
            @fixedWidth={{true}}
          />
        {{/if}}
      </span>
      {{#if this.zrSectionNumber}}
        <span data-test-zrsectionnumber>{{this.zrSectionNumber}}</span>
      {{/if}}
    </Q.Prompt>
    {{#if (or this.hasModifiedZrSectionNumberQuestion this.hasZrSectionTitleQuestion)}}
      {{#if this.hasModifiedZrSectionNumberQuestion}}
        <Q.Prompt>
          Which sections of the Zoning Resolution does this modify?
        </Q.Prompt>
        <small class="help-text display-block">
          Provide the Zoning Resolution section number(s). Ex. ZR Sec. 42-10 and 43-17
        </small>
        <zrForm.Field
          @attribute="dcpModifiedzrsectionnumber"
          as |TextInput|
        >
          <TextInput
            type="text"
            maxlength="25"
            data-test-input="dcpModifiedzrsectionnumber"
          />
        </zrForm.Field>
      {{/if}}
      {{#if this.hasZrSectionTitleQuestion}}
        <Q.Prompt>
          What is the title for the section of the Zoning Resolution that this action is pursuant to?
        </Q.Prompt>
        <small class="help-text display-block">
          Example: “Landmark preservation in all districts”. Refer to the Zoning Resolution to find the title for the section number.
        </small>
        <zrForm.Field
          @attribute="dcpZrsectiontitle"
          as |TextInput|
        >
          <TextInput
            type="text"
            maxlength="100"
            data-test-input="dcpZrsectiontitle"
          />
        </zrForm.Field>
      {{/if}}
      {{#if this.zrAppendixF}}
        This action {{if @rwcdsForm.saveableChanges.dcpIncludezoningtextamendment "includes" "does not include"}} MIH. If this is a mistake, please contact City Planning.
      {{/if}} 
    {{else}}
      <span class="help-text">No additional information required for this action</span>
    {{/if}}
  </Ui::Question>
{{/let}}
