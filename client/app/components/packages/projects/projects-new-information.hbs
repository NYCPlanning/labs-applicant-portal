{{#let @form as |form|}}
<form.Section @title="Project Information">
  <Ui::Question @required={{true}} as |Q|>
    <Q.Label>
      Project Name
    </Q.Label>

    <form.Field 
      @attribute="projectName" 
      @type="text-input" 
      id={{Q.questionId}} 
      @showCounter={{true}}
      @maxlength="50"
    />
  </Ui::Question>
  <Ui::Question @required={{true}} as |Q|>
    <Q.Label>
      Borough
    </Q.Label>
    <PowerSelect 
      @options={{@boroughOptions}}
      @onChange={{@onBoroughChange}}
      @selected={{@selectedBorough}} 
      @searchField="label"
      @placeholder="Select a borough"
      as |borough|
      >
      {{borough.label}}
    </PowerSelect>
  </Ui::Question>
</form.Section>
{{/let}}

