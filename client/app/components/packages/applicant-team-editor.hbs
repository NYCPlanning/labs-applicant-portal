<section>
  {{!-- always render a Primary Applicant fieldset --}}
  {{!-- TODO: handle when applicants is an empty array --}}
  {{#each @applicants as |applicant|}}
    <Packages::ApplicantFieldset
      @applicant={{applicant}}
      @title={{applicant.title}}
      @role={{applicant.role}}
      @removeApplicant = {{fn this.removeApplicant}}
    />
  {{/each}}

  {{!-- buttons for user to add new applicants --}}
  <div class="fieldset-adder">
    <p class="small-margin-bottom">
      Add a team member:
    </p>
    <p class="button-group">
      <button {{on "click" (fn this.addApplicant "Applicant") }} class="button secondary">
        <FaIcon
          @icon="plus"
          @prefix="fas"
        />
        Co-Applicant
      </button>
      <button {{on "click" (fn this.addApplicant "Representative") }} class="button secondary">
        <FaIcon
          @icon="plus"
          @prefix="fas"
        />
        Representative
      </button>
      <button {{on "click" (fn this.addApplicant "Environmental Consultant") }} class="button secondary">
        <FaIcon
          @icon="plus"
          @prefix="fas"
        />
        Environmental Consultant
      </button>
    </p>
  </div>
</section>