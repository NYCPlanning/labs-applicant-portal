<section>
  {{#each @applicants as |applicant|}}
    <Packages::ApplicantFieldset
      @applicant={{applicant}}
      @removeApplicant = {{fn this.removeApplicant}}
    />
  {{else}}
    {{!-- TODO:  Figure out how to handle empty array case --}}
    <Packages::ApplicantFieldset
      @removeApplicant={{fn this.removeApplicant}}
    />
  {{/each}}

  {{!-- buttons for user to add new applicants --}}
  <div class="fieldset-adder">
    <p class="small-margin-bottom">
      Add an Applicant Team Member:
    </p>
    <p class="button-group">
      <button {{on "click" (fn this.addApplicant "Applicant") }} class="button secondary">
        Add Applicant
      </button>
      <button {{on "click" (fn this.addApplicant "Applicant Team Member") }} class="button secondary">
        Add Other Team Member
      </button>
    </p>
  </div>
</section>