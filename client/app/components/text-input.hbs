<Input
  @type="text"
  @value={{@property}}
  data-test-input={{@propertyName}}
  ...attributes
/>
{{#if this.showCounter}}
  <CharacterCounter
    @string={{@property}}
    @maxlength={{this.maxlength}}
  />
{{/if}}
{{#if @changesetError}}
  <ValidationMessage
    @changesetError={{@changesetError}}
    data-test-validation-message={{@propertyName}}
  />
{{/if}}
