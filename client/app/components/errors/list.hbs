{{#each @errors as |error idx|}}
  {{#each-in error as |key value|}}
  {{ log 'error key: ' key }}
  {{ log 'error value: '  value }}
    <code
      class="callout display-block text-left red-muted"
      data-test-error-key={{key}}
      data-test-error-idx={{idx}}
    >
      {{key}}: {{value}}
    </code>
  {{/each-in}}
{{/each}}
