<Textarea
  @value={{@property}}
  data-test-textarea={{@propertyName}}
  rows="5"
  ...attributes
/>
{{#if (not (eq @showCounter false))}}
  <CharacterCounter
    @string={{@property}}
    @maxlength={{this.maxlength}}
  />
{{/if}}
{{#if @changesetError}}
  <ValidationMessage
    @changesetError={{@changesetError}}
    data-test-validation-message={{@propertyName}}
  />
{{/if}}
